#mainDiv.jumbotron.vertical-center
  #overlay
  .container-fluid
    #mainSearch.input-group
      input#searchBar.form-control.global-search(type='text', placeholder='Search for snippets')
      .input-group-btn
        .btn-group(role='group')
          .dropdown.dropdown-lg
            button#expandSearchBttn.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
              span.caret
            .dropdown-menu.dropdown-menu-right(role='menu')
              form.form-horizontal(role='form')
                .form-group
                  label(for='filter') Filter by
                  select.form-control
                    option(value='0', selected='') All Snippets
                    option(value='1') Featured
                    option(value='2') Most popular
                    option(value='3') Top rated
                    option(value='4') Most commented
                .form-group
                  label(for='contain') Author
                  input.form-control(type='text')
                .form-group
                  label(for='contain') Contains the words
                  input.form-control(type='text')
                button.btn.btn-primary(type='submit')
                  span.glyphicon.glyphicon-search(aria-hidden='true')
          button#searchBttn.btn.btn-primary(type='button')
            span.glyphicon.glyphicon-search(aria-hidden='true')
